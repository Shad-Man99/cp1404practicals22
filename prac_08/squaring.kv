BoxLayout:
    orientation: 'vertical'
    BoxLayout:
        orientation: 'horizontal'
        TextInput:
            id: input_number
            text: '7'
            font_size: 22
            multiline: False
        Button:
            text: 'Square'
            on_press: app.handle_calculate(int(input_number.text))
        Label:
            id: output_label
            font_size: 22
            color: (5,150,3,1)
    Label:
        id: instruction_label
        font_size: 12
        text: 'Enter a number and press "Square"'